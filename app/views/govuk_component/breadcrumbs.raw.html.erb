<%
  breadcrumbs ||= []
%>
<div class="govuk-breadcrumbs">
  <ol role="breadcrumbs">
    <li>
      <a href="/">Home</a>
    </li>
  <% breadcrumbs.each do |crumb| %>
    <li>
      <% if crumb[:url] %>
        <a href="<%= crumb[:url] %>"><%= crumb[:title] %></a>
      <% else %>
        <%= crumb[:title] %>
      <% end %>
    </li>
  <% end %>
  </ol>
</div>
